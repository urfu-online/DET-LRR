{
  "name": "lrr",
  "version": "0.1.0",
  "dependencies": {
    "gridstack": "^4.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.7",
    "bootstrap": "^4.6.1",
    "browser-sync": "^2.27.9",
    "cssnano": "^5.1.7",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^4.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-uglify-es": "^3.0.0",
    "pixrem": "^5.0.0",
    "popper.js": "1.16.1",
    "postcss": "^8.4.13",
    "sass": "^1.51.0",
    "stylelint-config-standard": "^25.0.0",
    "y18n": "^3.2.2",
    "@stylelint/prettier-config": "^2.0.0",
    "@stylelint/remark-preset": "^3.0.0",
    "eslint": "^8.14.0",
    "eslint-config-stylelint": "^15.1.0",
    "lint-staged": "^12.4.1",
    "jest": "^28.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "remark-cli": "^10.0.1",
    "stylelint": "^14.8.2"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,md,yml}": "prettier --write"
  },
  "prettier": "@stylelint/prettier-config",
  "eslintConfig": {
    "extends": [
      "stylelint"
    ],
    "globals": {
      "module": true,
      "require": true
    }
  },
  "remarkConfig": {
    "plugins": [
      "@stylelint/remark-preset"
    ]
  },
  "overrides": {
    "graceful-fs": "^4.2.9"
  },
  "resolutions": {
    "graceful-fs": "^4.2.9"
  },
  "engines": {
    "node": ">=8"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "scripts": {
    "dev": "gulp",
    "build": "gulp generate-assets",
    "format": "prettier . --write",
    "lint:formatting": "prettier . --check",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*"
  }
}
