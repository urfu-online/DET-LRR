{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-prettier-scss"
  ],
  "rules": {
    "scss/no-global-function-names": "null",
    "selector-class-pattern": [
      "^([a-z][a-z0-9]*)(-[a-z0-9]+)*(--[a-z0-9]+)*(__[a-z0-9]+)*$",
      {
        "message": "Expected class selector to be kebab-case"
      }
    ],
    "selector-id-pattern": [
      "^([a-z][a-z0-9]*)(-[a-z0-9]+)*(--[a-z0-9]+)*(__[a-z0-9]+)*$",
      {
        "message": "Expected class selector to be kebab-case"
      }
    ]
  }
}
